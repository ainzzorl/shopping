<%- contentFor('body') %>

<div class="container mt-4">
    <h1>Edit Store</h1>
    
    <form action="/stores/<%= store.id %>" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Store Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= store.name %>" required>
        </div>
        
        <div class="mb-3">
            <label for="website" class="form-label">Website</label>
            <input type="url" class="form-control" id="website" name="website" value="<%= store.website %>" placeholder="https://...">
        </div>
        
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Update Store</button>
            <a href="/stores" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div> 
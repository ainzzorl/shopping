<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <%= item.name %>
            </h1>
            <div>
                <a href="/items/<%= item.id %>/edit" class="btn btn-warning">Edit</a>
                <form action="/items/<%= item.id %>/delete" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger"
                        onclick="return confirm('Are you sure?')">Delete</button>
                </form>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <p><strong>URL:</strong> <a href="<%= item.url %>" target="_blank">
                                <%= item.url %>
                            </a></p>
                        <p><strong>Target Price:</strong> $<%= item.target_price.toFixed(2) %>
                        </p>
                        <p>
                            <strong>Status:</strong>
                            <span class="badge <%= item.enabled ? 'bg-success' : 'bg-secondary' %>">
                                <%= item.enabled ? 'Enabled' : 'Disabled' %>
                            </span>
                        </p>
                        <p>
                            <strong>Notifications:</strong>
                            <span class="badge <%= item.enable_notifications ? 'bg-success' : 'bg-secondary' %>">
                                <%= item.enable_notifications ? 'Enabled' : 'Disabled' %>
                            </span>
                        </p>
                    </div>
                    <% if (item.image_url) { %>
                        <div class="col-md-4">
                            <img src="<%= item.image_url %>" alt="<%= item.name %>" class="img-fluid">
                        </div>
                        <% } %>
                </div>
            </div>
        </div>

        <h2>Scraping & Price History</h2>
        <% if (scrapingTasks.length> 0) { %>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Scheduled</th>
                            <th>Executed</th>
                            <th>Status</th>
                            <th>Price</th>
                            <th>vs Target</th>
                            <th>Resources</th>
                            <th>Error</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% scrapingTasks.forEach(task=> { %>
                            <tr>
                                <td>
                                    <%= moment(task.scheduled_time).format('YYYY-MM-DD HH:mm:ss') %>
                                </td>
                                <td>
                                    <% if (task.execution_time) { %>
                                        <%= moment(task.execution_time).format('YYYY-MM-DD HH:mm:ss') %>
                                    <% } else { %>
                                        <span class="text-muted">Pending</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (task.success === null) { %>
                                        <span class="badge bg-secondary">Pending</span>
                                    <% } else if (task.success) { %>
                                        <span class="badge bg-success">Success</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">Failed</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (task.price !== null && task.price !== undefined) { %>
                                        $<%= task.price.toFixed(2) %>
                                    <% } else { %>
                                        <span class="text-muted">—</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (task.price !== null && task.price !== undefined) { %>
                                        <% const diff=task.price - item.target_price; %>
                                        <span class="<%= diff > 0 ? 'text-danger' : 'text-success' %>">
                                            <%= diff> 0 ? '+' : '' %>$<%= diff.toFixed(2) %>
                                        </span>
                                    <% } else { %>
                                        <span class="text-muted">—</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (task.screenshot_path) { %>
                                        <a href="/<%= task.screenshot_path.replace(/^.*[\/\\]results[\/\\]/, 'results/') %>" target="_blank" class="btn btn-sm btn-outline-primary">Screenshot</a>
                                    <% } %>
                                    <% if (task.html_path) { %>
                                        <a href="/<%= task.html_path.replace(/^.*[\/\\]results[\/\\]/, 'results/') %>" target="_blank" class="btn btn-sm btn-outline-secondary">HTML</a>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (task.success === 0 && task.error_message) { %>
                                        <small class="text-danger"><%= task.error_message %></small>
                                    <% } else { %>
                                        <span class="text-muted">—</span>
                                    <% } %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <p class="text-muted">No scraping history yet.</p>
                <% } %>
    </div>
</div>